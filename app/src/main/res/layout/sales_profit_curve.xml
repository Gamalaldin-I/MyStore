<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section with Gradient -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/best_seller_cat_bg"
                android:padding="24dp">

                <!-- Title Row with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Performance Trends"
                            android:textSize="22sp"
                            android:textColor="@color/text_white"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales and profit over time"
                            android:textSize="13sp"
                            android:textColor="@color/text_white"
                            android:alpha="0.85"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Chart Container with subtle background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FAFBFC"
                >

                <!-- Chart -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@drawable/chart_bg"/>

                <!-- Insight Card (Optional - shows when data is available) -->
                <LinearLayout
                    android:id="@+id/insightCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/insights_card_bg"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:text="ðŸ’¡"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/insightText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Your sales are trending upward!"
                        android:textSize="13sp"
                        android:textColor="#374151"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>