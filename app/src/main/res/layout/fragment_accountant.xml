<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.analysis.AccountantFragment">

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/headerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/surface"
                app:cardElevation="2dp"
                app:cardCornerRadius="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accountant"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select date range to view detailed report"
                        android:textSize="14sp"
                        android:textColor="@color/onSurfaceVariant"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Date Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dateSelectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/surface"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/headerCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date Range"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurface"
                        android:layout_marginBottom="16dp" />

                    <!-- From Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Date"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurfaceVariant"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/PickFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Start Date"
                        android:textAllCaps="false"
                        android:gravity="start|center_vertical"
                        android:paddingVertical="14dp"
                        app:icon="@drawable/ic_calender"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginBottom="16dp" />

                    <!-- To Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Date"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_accent_blue"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pickTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select End Date"
                        android:textAllCaps="false"
                        android:gravity="start|center_vertical"
                        android:paddingVertical="14dp"
                        app:icon="@drawable/ic_calender"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginBottom="20dp" />

                    <!-- Quick Select Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Select"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurfaceVariant"
                        android:layout_marginBottom="8dp" />

                    <!-- Quick Select Chips -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginBottom="20dp">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/quickSelectChips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:chipSpacingHorizontal="8dp">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipToday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today"
                                style="@style/Widget.Material3.Chip.Filter" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This Week"
                                style="@style/Widget.Material3.Chip.Filter" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This Month"
                                style="@style/Widget.Material3.Chip.Filter" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This Year"
                                style="@style/Widget.Material3.Chip.Filter" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline"
                        android:alpha="0.3"
                        android:layout_marginBottom="16dp" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/reset"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Reset"
                            android:textAllCaps="false"
                            android:paddingVertical="14dp"
                            app:icon="@drawable/ic_refresh"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/calculate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Calculate"
                            android:textAllCaps="false"
                            android:paddingVertical="14dp"
                            app:icon="@drawable/ic_calculate"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Report Brief Section -->
            <include
                android:id="@+id/accountBrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                layout="@layout/accountant_brief_page"
                app:layout_constraintTop_toBottomOf="@id/dateSelectionCard" />

            <!-- Export Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/exportBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Export Report"
                android:textAllCaps="false"
                android:paddingVertical="14dp"
                app:icon="@drawable/icon_share"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button.TonalButton"
                app:layout_constraintTop_toBottomOf="@id/accountBrief"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Loading Indicator -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/accountBrief"
                app:layout_constraintBottom_toBottomOf="@id/accountBrief"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>