<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbarSize="0dp"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_auth"
    tools:context=".ui.signup.UserFormFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="24dp"
        >

        <LinearLayout
            android:id="@+id/progressIndicator"
            android:layout_width="100dp"
            android:layoutDirection="ltr"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="4dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/progress_active"
                android:elevation="2dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/progress_inactive"
                android:elevation="1dp" />


        </LinearLayout>

        <!-- Enhanced Icon Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/iconContainer"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="48dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/background_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressIndicator">

            <ImageView
                android:id="@+id/headerIcon"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/action_primary" />
        </androidx.cardview.widget.CardView>


        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/create_your_account"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconContainer" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/sign_up_to_get_started_with_stora"
            android:textAlignment="center"
            android:textColor="@color/action_primary"
            android:textSize="15sp"
            android:alpha="0.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <!-- Google Sign In Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleSignInBtn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="@string/continue_with_google"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintWidth_max="500dp" />

        <!-- Divider with "OR" -->
        <LinearLayout
            android:id="@+id/dividerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/googleSignInBtn"
            app:layout_constraintWidth_max="500dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/or"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:alpha="0.6" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:alpha="0.3" />

        </LinearLayout>

        <!-- Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            android:layout_marginHorizontal="24dp"
            app:cardBackgroundColor="@color/background_dark"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerLayout"
            app:layout_constraintWidth_max="500dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameLo"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/full_name"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/input_border_focus"
                    app:cursorColor="@color/action_primary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/action_primary"
                    app:hintTextColor="@color/action_primary"
                    app:placeholderTextColor="@color/action_primary"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="@color/action_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="@color/action_primary"
                        android:textSize="16sp"
                        android:paddingVertical="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailLo"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/email_address"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/input_border_focus"
                    app:cursorColor="@color/action_primary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/action_primary"
                    app:hintTextColor="@color/action_primary"
                    app:placeholderTextColor="@color/action_primary"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="@color/action_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/action_primary"
                        android:textSize="16sp"
                        android:paddingVertical="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLo"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/password"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/input_border_focus"
                    app:cursorColor="@color/text_tertiary"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/action_primary"
                    app:hintTextColor="@color/action_primary"
                    app:placeholderTextColor="@color/action_primary"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:startIconTint="@color/action_primary"
                    app:helperText="Must be at least 8 characters"
                    app:helperTextTextColor="@color/action_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/action_primary"
                        android:textSize="16sp"
                        android:paddingVertical="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmPasswordLo"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/confirm_password"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/input_border_focus"
                    app:cursorColor="@color/action_primary"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/action_primary"
                    app:hintTextColor="@color/action_primary"
                    app:placeholderTextColor="@color/action_primary"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:startIconTint="@color/action_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmPasswordEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/action_primary"
                        android:textSize="16sp"
                        android:paddingVertical="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Requirements Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/action_primary"
                    android:alpha="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password_must_contain"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/at_least_8_characters_n_one_uppercase_letter_n_one_number_or_special_character"
                        android:textColor="@color/text_primary"
                        android:textSize="11sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Create Account Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/finishBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="@string/create_account"
            android:textSize="16sp"
            android:layout_marginHorizontal="24dp"

            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:elevation="4dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/formCard"
            app:layout_constraintWidth_max="500dp" />

        <!-- Terms and Privacy -->
        <TextView
            android:id="@+id/termsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="@string/by_creating_an_account_you_agree_to_our_nterms_of_service_and_privacy_policy"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginHorizontal="24dp"
            android:textSize="12sp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/finishBtn"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_max="400dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>