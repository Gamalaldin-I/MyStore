<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.signup.StoreFormFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill store info"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/storeNmaeLo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Store name"
            app:boxStrokeColor="@color/input_border_focus"
            app:cursorColor="@color/text_tertiary"
            app:hintTextColor="@color/text_tertiary"
            app:placeholderTextColor="@color/text_secondary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/storeLocationLo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Location"
            app:boxStrokeColor="@color/input_border_focus"
            app:cursorColor="@color/text_tertiary"
            app:hintTextColor="@color/text_tertiary"
            app:placeholderTextColor="@color/text_secondary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/LocationEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/storePhoneLo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Phone"
            app:boxStrokeColor="@color/input_border_focus"
            app:cursorColor="@color/text_tertiary"
            app:hintTextColor="@color/text_tertiary"
            app:placeholderTextColor="@color/text_secondary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PhoneEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/finishBtn"
            android:layout_marginTop="10dp"
            android:text="Finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>