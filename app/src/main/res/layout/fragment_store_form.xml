<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.signup.StoreFormFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Progress Indicator - All steps complete -->
        <LinearLayout
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginEnd="8dp"
                android:background="@color/action_primary" />

            <View
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_marginEnd="8dp"
                android:background="@color/action_primary" />

            <View
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:alpha="0.3"
                android:background="@color/action_primary" />
        </LinearLayout>

        <!-- Header Icon -->
        <ImageView
            android:id="@+id/headerIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/store_information"
            android:src="@drawable/nav_store"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressIndicator"
            app:tint="@color/action_primary" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/store_information"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerIcon" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/store_form_hint"
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:alpha="0.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <!-- Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintWidth_max="500dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Store Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/storeNameLo"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/store_name"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/input_border_focus"
                    app:cursorColor="@color/text_tertiary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/action_primary"
                    app:hintTextColor="@color/text_tertiary"
                    app:placeholderTextColor="@color/text_secondary"
                    app:startIconDrawable="@drawable/nav_store"
                    app:startIconTint="@color/action_primary"
                    app:helperText="The name of your business"
                    app:helperTextTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingVertical="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Location Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/storeLocationLo"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/store_location"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/input_border_focus"
                    app:cursorColor="@color/text_tertiary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/action_primary"
                    app:hintTextColor="@color/text_tertiary"
                    app:placeholderTextColor="@color/text_secondary"
                    app:startIconDrawable="@android:drawable/ic_dialog_map"
                    app:startIconTint="@color/action_primary"
                    app:helperText="City, address, or area"
                    app:helperTextTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/locationEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress|textCapWords"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingVertical="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/storePhoneLo"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/phone_number"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/input_border_focus"
                    app:cursorColor="@color/text_tertiary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/action_primary"
                    app:hintTextColor="@color/text_tertiary"
                    app:placeholderTextColor="@color/text_secondary"
                    app:startIconDrawable="@android:drawable/stat_sys_phone_call"
                    app:startIconTint="@color/action_primary"
                    app:counterMaxLength="10"
                    app:counterEnabled="true"
                    app:helperText="Contact number for your store"
                    app:helperTextTextColor="@color/text_secondary"
                    app:prefixText="+20 ">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingVertical="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Optional Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/action_primary"
                    android:alpha="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tip"
                        android:textColor="@color/background_dark"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/password_details"
                        android:textColor="@color/background_dark"
                        android:textSize="11sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Finish Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/finishBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="@string/complete_setup"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:elevation="4dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/formCard"
            app:layout_constraintWidth_max="500dp" />

        <!-- Success Message -->
        <LinearLayout
            android:id="@+id/successMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/finishBtn"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_max="400dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/almost_there"
                android:textAlignment="center"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/your_account_will_be_ready_in_seconds"
                android:textAlignment="center"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:alpha="0.7" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>