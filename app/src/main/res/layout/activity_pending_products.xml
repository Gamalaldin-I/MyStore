<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.pendingProducts.PendingProductsActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back_arrow"
        app:navigationIconTint="@color/action_primary"
        app:title="Pending Products"
        app:titleTextColor="@color/onSurface"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/uploadButtonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:listitem="@layout/pending_product_card" />

    <!-- Upload Button Container with elevation -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/uploadButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeWidth="0dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/uploadBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/upload_products"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_upload"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            style="@style/Widget.Material3.Button" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Loading Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E6000000"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="@color/surface"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="40dp">

                <!-- Animated Icon Container -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/primary_accent_blue"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/loadingIcon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:contentDescription="Processing"
                        android:src="@drawable/ic_upload"
                        app:tint="@color/white" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Title -->
                <TextView
                    android:id="@+id/loadingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:text="@string/uploading_products"
                    android:textColor="@color/onSurface"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/loadingSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:text="@string/please_wait_while_we_process_your_products"
                    android:textColor="@color/onSurfaceVariant"
                    android:textSize="14sp" />

                <!-- Progress Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:orientation="vertical">

                    <!-- Progress Bar -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progress="0"
                        app:indicatorColor="@color/action_primary"
                        app:trackColor="@color/outline"
                        app:trackCornerRadius="6dp"
                        app:trackThickness="12dp"
                        tools:progress="45" />

                    <!-- Progress Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/progressText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/preparing_products"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/progressPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/action_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="45%" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Item Counter -->
                <TextView
                    android:id="@+id/itemCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:alpha="0.6"
                    android:text="0 of 0 products"
                    android:textColor="@color/onSurfaceVariant"
                    android:textSize="13sp"
                    tools:text="3 of 5 products" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Success/Error Message Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#DC000000"
        android:clickable="true"
        android:elevation="25dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/messageCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:backgroundTint="@color/surface"
            app:cardCornerRadius="32dp"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="40dp">

                <!-- Success/Error Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/messageIconContainer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/success"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/messageIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:contentDescription="Status"
                        android:src="@drawable/ic_check"
                        app:tint="@color/white" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Message Title -->
                <TextView
                    android:id="@+id/messageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/success"
                    android:textColor="@color/onSurface"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <!-- Message Description -->
                <TextView
                    android:id="@+id/messageDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:alpha="0.8"
                    android:gravity="center"
                    android:text="@string/products_uploaded_successfully"
                    android:textColor="@color/onSurfaceVariant"
                    android:textSize="15sp" />

                <!-- Optional Details -->
                <TextView
                    android:id="@+id/messageDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:text="@string/_5_products_uploaded_successfully"
                    android:textColor="@color/onSurfaceVariant"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Dismiss Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dismissMessageBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginTop="28dp"
                    android:paddingHorizontal="48dp"
                    android:text="@string/done"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:backgroundTint="@color/surface_variant"
            app:cardCornerRadius="70dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:contentDescription="Empty"
                android:src="@drawable/ic_empty"
                app:tint="@color/onSurfaceVariant" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/no_products_yet"
            android:textColor="@color/onSurface"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:alpha="0.7"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/you_haven_t_added_any_products_yet_nadd_products_to_get_started_with_uploading"
            android:textColor="@color/onSurfaceVariant"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>