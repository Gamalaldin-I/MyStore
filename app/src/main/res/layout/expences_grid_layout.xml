<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/grid"
    android:columnCount="2"
    android:rowCount="2"
    android:useDefaultMargins="false">

    <!-- Expense Category 1 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c0"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_blue">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="💰"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#457CC2"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/firstCatVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFBEB"
                android:padding="12dp">

                <TextView
                    android:id="@+id/firstCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="13sp"
                    android:textColor="#4178BE"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Expense Category 2 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c1"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="10dp"
        app:cardElevation="6dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_purble">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="🛒"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#653BB7"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/secondCatVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFF6FF"
                android:padding="12dp">

                <TextView
                    android:id="@+id/secondCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="13sp"
                    android:textColor="#4E2BAD"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Expense Category 3 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c2"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_orange">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="🏪"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#E37111"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/thirdCatVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDF2F8"
                android:padding="12dp">

                <TextView
                    android:id="@+id/thirdCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="13sp"
                    android:textColor="#E26E11"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Expense Category 4 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c3"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_columnWeight="1"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_green">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="📦"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#278A40"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/fourthCatVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:textColor="#F0EFEF"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEF2FF"
                android:padding="12dp">

                <TextView
                    android:id="@+id/fourthCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="13sp"
                    android:textColor="#279043"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</GridLayout>