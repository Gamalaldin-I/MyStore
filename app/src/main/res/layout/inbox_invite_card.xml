<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/nav_border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header Icon -->
        <ImageView
            android:id="@+id/inviteIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/oc_invite"
            android:background="@drawable/delete_shadow"
            android:backgroundTint="@color/primary_accent_blue"
            app:tint="@color/primary_accent_blue"
            android:contentDescription="Invitation icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Store Invitation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/inviteIcon"
            app:layout_constraintTop_toTopOf="@id/inviteIcon" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="You've been invited to join"
            android:textSize="13sp"
            android:textColor="@color/text_tertiary"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/inviteIcon"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <!-- Store Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/storeInfoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inviteIcon">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Store Name Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/nav_store"
                        android:contentDescription="Store icon"
                        app:tint="@color/text_tertiary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Store Name"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary" />

                        <TextView
                            android:id="@+id/storeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Htop Store"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Date Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calender"
                        android:contentDescription="Calendar icon"
                        app:tint="@color/text_tertiary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sent at"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary" />

                        <TextView
                            android:id="@+id/createdAt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20-7-2025"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Code Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/codeInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Confirmation Code"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/input_border_focus"
            app:hintTextColor="@color/text_tertiary"
            app:placeholderTextColor="@color/text_secondary"
            app:startIconDrawable="@drawable/ic_key"
            app:startIconTint="@color/text_tertiary"
            app:helperText="Enter the invitation code you received"
            app:helperTextTextColor="@color/text_tertiary"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/storeInfoCard">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/codeEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:textColor="@color/text_primary"
                android:fontFamily="monospace"
                android:maxLength="20"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/codeInput">

            <!-- Reject Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/rejectBtn"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reject"
                android:textColor="@color/action_danger"
                android:textSize="15sp"
                android:textStyle="bold"
                app:strokeColor="@color/action_danger"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_close"
                app:iconTint="@color/action_danger"
                app:iconGravity="textStart"
                app:iconSize="20dp" />

            <!-- Accept Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/acceptBtn"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Accept"
                android:textSize="15sp"
                android:textStyle="bold"
                android:backgroundTint="@color/primary_accent_blue"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconSize="20dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>