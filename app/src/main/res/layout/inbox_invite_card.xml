<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:padding="16dp">

        <!-- Header Section -->
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/inviteIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/delete_shadow"
            android:backgroundTint="@color/primary_accent_blue"
            android:contentDescription="Invitation"
            android:scaleType="centerCrop"
            android:src="@drawable/oc_invite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="50dp" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/store_invitation"
            android:textColor="#3B81F4"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/inviteIcon"
            app:layout_constraintTop_toTopOf="@id/inviteIcon" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="@string/you_ve_been_invited_to_join"
            android:textColor="@color/border_dark"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/inviteIcon"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <!-- Store Info Section -->
        <LinearLayout
            android:id="@+id/storeInfoSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inviteIcon">

            <!-- Store Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:contentDescription="Store"
                    android:src="@drawable/nav_store"
                    app:tint="@color/text_tertiary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/store"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/storeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Htop Store"
                        android:textColor="@color/action_primary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:contentDescription="Date"
                    android:src="@drawable/ic_calender"
                    app:tint="@color/text_tertiary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sent"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/createdAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20-7-2025"
                        android:textColor="@color/action_primary"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Code Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/codeInput"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/invitation_code"
            app:boxStrokeColor="@color/input_border_focus"
            app:endIconDrawable="@drawable/icon_copy"
            app:endIconMode="custom"
            app:endIconTint="@color/text_tertiary"
            app:helperText="Enter the code you received"
            app:helperTextTextColor="@color/text_tertiary"
            app:hintTextColor="@color/text_tertiary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/storeInfoSection"
            app:startIconDrawable="@drawable/ic_key"
            app:startIconTint="@color/text_tertiary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/codeEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:inputType="textNoSuggestions"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/action_primary"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/codeInput">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rejectBtn"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="@string/reject"
                android:textColor="@color/action_danger"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_close"
                app:iconGravity="textStart"
                app:iconSize="18dp"
                app:iconTint="@color/action_danger"
                app:strokeColor="@color/action_danger"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/acceptBtn"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/primary_accent_blue"
                android:text="@string/accept"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconSize="18dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>


