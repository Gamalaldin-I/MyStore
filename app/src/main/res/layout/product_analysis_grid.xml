<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="1"
    android:id="@+id/grid"
    android:columnOrderPreserved="false"
    android:useDefaultMargins="false">

    <!-- Least Selling Card with Warning Design -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/alert_critical">

            <!-- Icon Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/theLeastSellingCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="36sp"
                        android:textColor="@color/text_white"
                        android:fontFamily="sans-serif-medium"
                        android:text="--"
                        android:gravity="center"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Bottom Label with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FEF2F2"
                android:padding="14dp"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Least Selling"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#991B1B"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Best Seller Card with Success Design -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_row="0"
        android:layout_margin="10dp"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/best_seller_cat_bg">

            <!-- Icon Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end|top">
                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:text="🏆"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:backgroundTint="#D1FAE5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/mostSalesCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="36sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:text="--"
                        android:gravity="center"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Bottom Label with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ECF9FD"
                android:padding="14dp"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Best Seller"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/action_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</GridLayout>