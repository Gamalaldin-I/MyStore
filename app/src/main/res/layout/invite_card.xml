<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/deep_oacen"
        android:padding="12dp">

        <!-- Header: Title + Status -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/invitation_code"
            android:textColor="#BEBEBE"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/statusChip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/statusChip"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="top"
            android:text="@string/pending"
            android:textColor="@color/action_warning"
            android:textSize="10sp"
            app:chipBackgroundColor="@color/background_surface_dark"
            app:chipMinHeight="25dp"
            app:layout_constraintBottom_toTopOf="@+id/codeSection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Code Section -->
        <LinearLayout
            android:id="@+id/codeSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#0A1A30"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText">

            <TextView
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:fontFamily="monospace"
                android:maxLines="1"
                android:text="flkdfkjsdjfklkldvkl"
                android:textColor="#1D385C"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/copyBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Copy code"
                android:padding="2dp"
                android:src="@drawable/icon_copy"
                app:tint="@color/neutral_400" />

        </LinearLayout>

        <!-- Details Grid -->
        <LinearLayout
            android:id="@+id/detailsGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/codeSection">

            <!-- Email Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:contentDescription="Email"
                    android:src="@drawable/icon_email"
                     />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BEBEBE"
                        android:text="@string/invite_to"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="htbtjmal2013@gmail.com"
                        android:textColor="#0066ED"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Date Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:contentDescription="Date"
                    android:src="@drawable/ic_calender"
                    app:tint="@color/neutral_400" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/created"
                        android:textColor="#C0C7D0"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/createdAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20-7-2025"
                        android:textColor="#9BA2AE"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailsGrid">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/shareBtn"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:text="@string/share"
                android:textColor="#9BA2AE"
                android:textSize="10sp"
                app:cornerRadius="6dp"
                app:icon="@drawable/icon_share"
                app:iconSize="14dp"
                app:iconTint="#9BA2AE" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteBtn"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:text="@string/delete"
                android:textColor="@color/process_rejected"
                android:textSize="10sp"
                app:cornerRadius="6dp"
                app:icon="@drawable/icon_delete"
                app:iconSize="14dp"
                app:iconTint="@color/process_rejected" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>


