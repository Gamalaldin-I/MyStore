<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ui.analysis.SalesAnalysisFragment">

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Header Section with Gradient -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="4dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="32dp"
                android:paddingBottom="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ Sales Analysis"
                    android:textSize="32sp"
                    android:textColor="@color/action_primary"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monitor your business performance"
                    android:textSize="15sp"
                    android:textColor="@color/text_tertiary"
                    android:alpha="0.9"
                    android:layout_marginTop="6dp"/>

                <!-- Duration Selector -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Select duration"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxStrokeColor="#10B981"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:endIconMode="dropdown_menu"
                    app:hintTextColor="#6B7280"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/autoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Sales & Profit Curve Chart -->
            <include
                layout="@layout/sales_profit_curve"
                android:id="@+id/curves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <!-- Sales Stats Grid -->
            <include
                layout="@layout/sales_analysis_grid"
                android:id="@+id/numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <!-- No Sales Hint -->
            <TextView
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="ðŸ“Š No sales data available"
                android:textSize="18sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:visibility="gone"/>

            <!-- Expenses Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/expensesLo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Expenses Header with Gradient -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/expenses_gradient_red"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="ðŸ’¸"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:background="@drawable/icon_bg"
                                android:backgroundTint="#FFFFFF"
                                android:layout_marginEnd="12dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/expenses"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Expenses"
                                    android:textSize="22sp"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="sans-serif-medium"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Breakdown by category"
                                    android:textSize="13sp"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.85"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Expenses Chart -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/expensesChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="20dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Expenses Grid (Dynamic) -->
            <include
                layout="@layout/expences_grid_layout"
                android:id="@+id/expensesGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
