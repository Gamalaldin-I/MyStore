<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.adding.AddProductActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/back_arrow"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/action_primary"
                    android:contentDescription="@string/back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_new_product"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/onSurface"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/backArrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <!-- Product Image Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/surface"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/imageLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_image"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/onSurface"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Image Placeholder -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/imageContainer"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/action_primary"
                        android:backgroundTint="#1E566FC9"
                        app:layout_constraintTop_toBottomOf="@id/imageLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/product_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/product_image"
                            android:padding="48dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_camera"
                             />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Image Action Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/imageContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/selectImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gallary"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_image"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.TonalButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/takePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/camera"
                            android:textAllCaps="false"
                            android:layout_marginStart="8dp"
                            app:icon="@drawable/ic_camera"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Barcode Scanner Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scannerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/tertiary_container"
                app:layout_constraintTop_toBottomOf="@id/imageCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_qr"
                        app:tint="@color/onTertiaryContainer"
                        android:contentDescription="@string/barcode" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/product_id"
                            android:textSize="12sp"
                            android:textColor="@color/onTertiaryContainer"
                            android:alpha="0.8" />

                        <TextView
                            android:id="@+id/id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/not_scanned"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onTertiaryContainer"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/scanId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan"
                        android:textAllCaps="false"
                        app:icon="@drawable/grid_scan"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                    <ImageView
                        android:id="@+id/clearId"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_close"
                        android:padding="10dp"
                        android:layout_marginStart="4dp"
                        android:visibility="gone"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/onTertiaryContainer"
                        android:contentDescription="@string/clear_id" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Product Details Form -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detailsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/surface"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scannerCard"
                tools:layout_editor_absoluteX="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/product_details"
                        android:textColor="@color/onSurface"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Category (AutoComplete) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutQ1"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/category"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <AutoCompleteTextView
                            android:id="@+id/autoTypeCompleteQ1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/onSurface"
                            tools:ignore="LabelFor,SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Brand Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/productBrandLo"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/brand_name"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/productBrandET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/onSurface" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Price Section Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/pricing"
                        android:textColor="@color/onSurface"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Price Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        tools:ignore="DisableBaselineAlignment">

                        <!-- Buying Price -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/buyingPriceLo"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:hint="@string/buying_price"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:prefixText="LE ">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/buyingPriceET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="@color/onSurface" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Selling Price -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/sellingPriceLo"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:hint="@string/selling_price"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:prefixText="LE ">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sellingPriceET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="@color/onSurface" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Profit Preview -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/profitPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@color/surface_variant"
                        android:visibility="gone"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/profitIcon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="TODO"
                                android:src="@drawable/trading"
                                app:tint="@color/success" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.8"
                                    android:text="@string/profit_per_item"
                                    android:textColor="@color/onSurfaceVariant"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/profitAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="0 LE"
                                    android:textColor="@color/success"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Quantity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/inventory"
                        android:textColor="@color/onSurface"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/countLo"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/quantity"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:suffixText=" items">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/countET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/onSurface" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Fixed Bottom Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="@string/add_product"
        android:textAllCaps="false"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart"
        app:cornerRadius="16dp"
        style="@style/Widget.Material3.Button" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>