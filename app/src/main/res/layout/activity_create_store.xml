<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.createStore.CreateStoreActivity">

    <!-- Main Content -->
    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarSize="0dp"
        android:background="@drawable/bg_auth">

        <LinearLayout
            android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:padding="7dp">
            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutBtn"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:text="@string/logout"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_logout"
                app:iconGravity="textStart"
                app:iconSize="18dp"
                app:iconTint="@color/action_primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/action_primary"
                app:strokeWidth="1dp" />


            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/store_information"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                app:layout_constraintWidth_max="350dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/store_form_hint"
                android:textAlignment="center"
                android:textColor="@color/action_info"
                android:textSize="16sp"
                android:alpha="0.95"
                android:lineSpacingExtra="2dp"
                app:layout_constraintWidth_max="320dp" />

            <!-- Store Logo Upload Section -->
            <include layout="@layout/upload_store_icon"
                android:id="@+id/storeLogoSec"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <!-- Store Information Card -->
            <include layout="@layout/store_form"
                android:id="@+id/storeFormSec"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <!-- Store Plan Selection Card -->
            <include layout="@layout/plan_card_section"
                android:id="@+id/storePlanSec"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <!-- Create Store Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateStore"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="32dp"
                android:text="@string/complete_setup"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                app:cornerRadius="16dp"
                app:elevation="6dp"
                android:layout_margin="20dp"
                app:icon="@drawable/ic_check"
                app:iconGravity="textEnd"
                app:iconSize="20dp"
                app:layout_constraintWidth_max="500dp" />

            <!-- Success Message -->
            <LinearLayout
                android:id="@+id/successMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnCreateStore"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_max="400dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/almost_there"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/your_account_will_be_ready_in_seconds"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.9"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Loading Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loadingCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_max="300dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="40dp"
                    android:gravity="center">

                    <!-- Loading Progress Indicator -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/loadingProgress"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:indeterminate="true"
                        app:indicatorSize="64dp"
                        app:trackThickness="6dp"
                        app:indicatorColor="@color/action_primary"
                        app:trackColor="@color/input_border_focus"
                        app:trackCornerRadius="3dp" />

                    <!-- Loading Text -->
                    <TextView
                        android:id="@+id/loadingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/creating_your_store"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.01" />

                    <!-- Loading Subtext -->
                    <TextView
                        android:id="@+id/loadingSubtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/please_wait_a_moment"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:alpha="0.8"
                        android:textAlignment="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</FrameLayout>