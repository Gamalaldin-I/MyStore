<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="16dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/primary"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/nav_report"
                app:tint="@color/onPrimary"
                android:contentDescription="Financial Report" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financial Report"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/onPrimary"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/dateRangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No date selected"
                android:textSize="14sp"
                android:textColor="@color/onPrimary"
                android:alpha="0.8"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Stats Grid -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statsGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerCard">

        <!-- Row 1: Sales & Expenses -->

        <!-- Sales Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/salesCard"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/success_container"
            android:minHeight="140dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toStartOf="@id/expensesCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/success"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Sales"
                        android:padding="12dp"
                        android:src="@drawable/grid_sales"
                        app:tint="@color/white" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/totalSales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="$0.00"
                    android:textColor="@color/success"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Total Sales"
                    android:textColor="@color/success_text"
                    android:textSize="12sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Expenses Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/expensesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/error_container"
            android:minHeight="140dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/salesCard"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/error"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Expenses"
                        android:padding="12dp"
                        android:src="@drawable/grid_outcome"
                        app:tint="@color/white" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/totalExpenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="$0.00"
                    android:textColor="@color/error"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Total Expenses"
                    android:textColor="@color/onErrorContainer"
                    android:textSize="12sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Row 2: Total Profit & Buying Value -->

        <!-- Total Profit Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profitCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/primary_container"
            android:minHeight="140dp"
            app:cardCornerRadius="16dp"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toStartOf="@id/buyingCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/salesCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/primary"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Profit"
                        android:padding="12dp"
                        android:src="@drawable/ic_profit"
                        app:tint="@color/onPrimary" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/totalProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="$0.00"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Total Profit"
                    android:textColor="@color/onPrimaryContainer"
                    android:textSize="12sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Buying Value Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/buyingCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/tertiary_container"
            android:minHeight="140dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profitCard"
            app:layout_constraintTop_toBottomOf="@id/expensesCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/tertiary"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Buying"
                        android:padding="12dp"
                        android:src="@drawable/ic_buy"
                        app:tint="@color/onTertiary" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/ValueOfBuying"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="$0.00"
                    android:textColor="@color/tertiary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Buying Value"
                    android:textColor="@color/onTertiaryContainer"
                    android:textSize="12sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Net Profit Card (Highlighted) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/netProfitCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        app:strokeWidth="2dp"
        android:layout_margin="10dp"

        app:strokeColor="@color/primary"
        android:backgroundTint="@color/surface"
        app:layout_constraintTop_toBottomOf="@id/statsGrid"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:gravity="center_vertical">

            <!-- Icon Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="36dp"
                android:backgroundTint="@color/primary">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profit"
                    android:padding="16dp"
                    android:contentDescription="Net Profit" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Text Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Net Profit"
                    android:textColor="@color/onSurfaceVariant"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/netProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="$0.00"
                    android:textColor="@color/primary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/percentageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/trendIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="Trend"
                        android:src="@drawable/grid_sales"
                        app:tint="@color/success" />

                    <TextView
                        android:id="@+id/percentageChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="+15.3%"
                        android:textColor="@color/success"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:text=" vs last period"
                        android:textColor="@color/onSurfaceVariant"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/outline"
        android:alpha="0.3"
        app:layout_constraintTop_toBottomOf="@id/netProfitCard" />

    <!-- Additional Metrics (Optional) -->
    <LinearLayout
        android:id="@+id/additionalMetrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <!-- Profit Margin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/profitMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/onSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profit Margin"
                android:textSize="11sp"
                android:textColor="@color/onSurfaceVariant"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- ROI -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/roi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/onSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROI"
                android:textSize="11sp"
                android:textColor="@color/onSurfaceVariant"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Transactions -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/totalTransactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/onSurface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:textSize="11sp"
                android:textColor="@color/onSurfaceVariant"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>