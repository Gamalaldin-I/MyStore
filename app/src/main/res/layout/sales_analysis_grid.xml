<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/grid"
    android:columnCount="2"
    android:rowCount="3"
    android:useDefaultMargins="false">

    <!-- Top Day Card - Purple Theme -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_row="0"
        android:layout_marginStart="10dp"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_purble">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="14dp">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="📅"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#EDE9FE"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/topDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="sans-serif-medium"
                    android:text="-"
                    android:maxLines="1"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top Day"
                    android:textSize="12sp"
                    android:textColor="@color/dept_sales"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Best Time Card - Blue Theme -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_marginEnd="10dp"
        android:layout_columnWeight="1"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_blue">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="14dp">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="🕐"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#DBEAFE"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/topHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="sans-serif-medium"
                    android:text="-"
                    android:maxLines="1"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFF6FF"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Best Time"
                    android:textSize="12sp"
                    android:textColor="@color/action_primary"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Average Sale Card - Teal Theme -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_marginStart="10dp"
        android:layout_columnWeight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_teal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="14dp">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="📊"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#CCFBF1"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/avgOfSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0FDFA"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AVG per Sale"
                    android:textSize="12sp"
                    android:textColor="#A596CF"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Sale Operations Card - Cyan Theme -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="10dp"
        app:cardElevation="3dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_cyan">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="14dp">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="🔄"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#CFFAFE"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/salesOps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECFEFF"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Operations"
                    android:textSize="12sp"
                    android:textColor="#14ADA0"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Profit Card - Green Theme -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_row="2"
        android:layout_marginStart="10dp"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="3dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_green">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="14dp">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="💰"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#D1FAE5"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECFDF5"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profit"
                    android:textSize="12sp"
                    android:textColor="#279646"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Total Sales Card - Orange Theme -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="3dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_orange">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="14dp">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="💳"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg"
                    android:backgroundTint="#FED7AA"
                    android:layout_gravity="end|top"/>

                <TextView
                    android:id="@+id/totalSales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF7ED"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Sales"
                    android:textSize="12sp"
                    android:textColor="#E47510"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</GridLayout>
