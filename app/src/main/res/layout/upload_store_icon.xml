<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_white"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Logo Image Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoImageCard"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/background_card"
                android:focusable="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/gradient_gray_end"
                app:strokeWidth="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivStoreLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/store_logo"
                        android:scaleType="centerCrop"
                        android:src="@drawable/nav_store"
                        />

                    <!-- Upload Overlay -->
                    <View
                        android:id="@+id/uploadOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Camera Icon -->
                    <ImageView
                        android:id="@+id/cameraIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/upload" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Upload Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadLogo"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.02"
                android:text="@string/upload_store_logo"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:strokeColor="@color/action_primary"
                app:strokeWidth="2dp" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>