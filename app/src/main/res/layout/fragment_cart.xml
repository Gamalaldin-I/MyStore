<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.CartFragment">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/shopping_cart"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:letterSpacing="0.01"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/clearCartBtn" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clearCartBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/icon_delete"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="24dp"
                    app:iconTint="@color/button_danger"
                    app:cornerRadius="24dp"
                    app:backgroundTint="#2CEDB1BF"
                    app:elevation="2dp"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/staff" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Content Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/operationView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <!-- Discount Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/discountCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/action_primary"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/discount_bg"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/discountIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_discount"
                        app:tint="@color/white"
                        android:contentDescription="Discount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/discountControls"
                        app:layout_constraintStart_toEndOf="@id/discountIcon"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/discount"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:alpha="0.9" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/percentageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/white"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                tools:text="15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/discountControls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/decreaseBtn"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#4DFFFFFF"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_dec"
                                app:tint="@color/white"
                                android:contentDescription="Decrease" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/increaseBtn"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="@color/white"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_inc"
                                app:tint="@color/action_primary"
                                android:contentDescription="Increase" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Cart Items RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/summaryCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/discountCard"
                tools:itemCount="3"
                tools:listitem="@layout/cart_item" />

            <!-- Enhanced Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/summaryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                android:backgroundTint="@color/surface"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Subtotal Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/subtotal"
                            android:textColor="@color/onSurfaceVariant"
                             />

                        <TextView
                            android:id="@+id/totalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1200.00"
                            android:textColor="@color/onSurface"
                            android:textStyle="bold"
                            tools:text="1200.00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/le"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="15sp"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <!-- Discount Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/discount"
                            android:textColor="@color/onSurfaceVariant"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- "
                            android:textColor="@color/success"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/discountValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200.00"
                            android:textColor="@color/success"
                            android:textStyle="bold"
                            tools:text="180.00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/le"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="15sp"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginVertical="7dp"
                        android:background="@color/outline" />

                    <!-- Total Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_amount"
                            android:textColor="@color/onSurfaceVariant"
                            android:alpha="0.8" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/totalAfter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000.00"
                                android:textColor="@color/action_primary"
                                android:textSize="20sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:letterSpacing="-0.02"
                                tools:text="1200.00" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/le"
                                android:textColor="@color/background_dark"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginStart="6dp"
                                 />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center">


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sellNow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:text="@string/complete_sale"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_check"
                            app:iconGravity="textStart"
                            app:cornerRadius="16dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_empty"
                android:alpha="0.3"
                app:tint="@color/onSurfaceVariant"
                android:contentDescription="Empty cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/your_cart_is_empty"
                android:textColor="@color/onSurface"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/add_products_to_get_started"
                android:textColor="@color/onSurfaceVariant"
                android:textSize="14sp"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/scanProductBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/scan_product"
                android:textAllCaps="false"
                app:icon="@drawable/grid_scan"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button.TonalButton" />

        </LinearLayout>

        <!-- Enhanced Loading Overlay -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#E6000000"
            android:clickable="true"
            android:elevation="20dp"
            android:focusable="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:backgroundTint="@color/surface"
                app:cardCornerRadius="28dp"
                app:cardElevation="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="36dp">

                    <!-- Animated Icon Container -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:backgroundTint="@color/primary_accent_blue"
                        app:cardCornerRadius="48dp"
                        app:cardElevation="8dp">

                        <ImageView
                            android:id="@+id/loadingIcon"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:contentDescription="Processing"
                            android:src="@drawable/ic_check"
                            app:tint="@color/white" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Title -->
                    <TextView
                        android:id="@+id/loadingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:gravity="center"
                        android:text="@string/processing_sale"
                        android:textColor="@color/onSurface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.01" />

                    <!-- Subtitle -->
                    <TextView
                        android:id="@+id/loadingSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/updating_inventory"
                        android:textColor="@color/onSurfaceVariant"
                        android:textSize="15sp"
                        android:alpha="0.8" />

                    <!-- Progress Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="vertical">

                        <!-- Progress Bar -->
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:progress="45"
                            app:indicatorColor="@color/action_primary"
                            app:trackColor="@color/outline"
                            app:trackCornerRadius="5dp"
                            app:trackThickness="10dp"
                            tools:progress="45" />

                        <!-- Progress Info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/progressText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/processing_items"
                                android:textColor="@color/onSurfaceVariant"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/progressPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45%"
                                android:textColor="@color/action_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="45%" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Item Counter -->
                    <TextView
                        android:id="@+id/itemCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:alpha="0.6"
                        android:text="3 of 5 items"
                        android:textColor="@color/onSurfaceVariant"
                        android:textSize="13sp"
                        tools:text="3 of 5 items" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Success/Error Message Overlay -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/messageOverlay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#DC000000"
            android:clickable="true"
            android:elevation="25dp"
            android:focusable="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/messageCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="@color/surface"
                app:cardCornerRadius="32dp"
                app:cardElevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="40dp">

                    <!-- Success/Error Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/messageIconContainer"
                        android:backgroundTint="@color/success"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/messageIcon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:contentDescription="Status"
                            android:src="@drawable/ic_check"
                            app:tint="@color/white" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Message Title -->
                    <TextView
                        android:id="@+id/messageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:text="Success!"
                        android:textColor="@color/onSurface"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <!-- Message Description -->
                    <TextView
                        android:id="@+id/messageDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/sale_completed_successfully"
                        android:textColor="@color/onSurfaceVariant"
                        android:textSize="15sp"
                        android:alpha="0.8" />

                    <!-- Optional Details -->
                    <TextView
                        android:id="@+id/messageDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="5 items sold for 1200.00 LE"
                        android:textColor="@color/onSurfaceVariant"
                        android:textSize="13sp"
                        android:alpha="0.6"
                        android:visibility="gone" />

                    <!-- Dismiss Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dismissMessageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginTop="28dp"
                        android:text="@string/done"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:paddingHorizontal="48dp"
                        app:cornerRadius="16dp"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>